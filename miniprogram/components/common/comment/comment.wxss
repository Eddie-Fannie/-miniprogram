.customize-comment-component .input-comment {
  width: 670rpx;
  height: 68rpx;
  background-color: #f8f8f8;
  border-radius: 4px;
  border: 1px solid #ccc;
  margin-bottom: 30rpx;
}
.customize-comment-component .input-placeholder {
  padding-left: 16rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #969696;
}
.customize-comment-component .comment-send {
  width: 150rpx;
  min-height: 60rpx;
  border-radius: 28px;
  margin-bottom: 28rpx;
  margin-right: 0rpx;
  background-color: #42C02E;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #ffffff;
}
.customize-comment-component .line {
  height: 1px;
  background-color: #EAEAEA;
  margin-bottom: 40rpx;
}
