#customize-comment-component {

}
#customize-comment-component input {
  width: 670rpx;
  height: 68rpx;
  background-color: #f8f8f8;
  border-radius: 4px;
  border: 1px solid #ccc;
  margin-bottom: 30rpx;
}
#customize-comment-component .input-placeholder {
  padding-left: 16rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #969696;
}
#customize-comment-component button {
  width: 144rpx !important;
  height: 60rpx !important;
  line-height: 60rpx !important;
  border-radius: 28px !important;
  margin-bottom: 28rpx;
  margin-right: 0rpx;
  background-color: #42C02E;
}
#customize-comment-component button text {
  font-size: 24rpx !important;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #ffffff !important;
}
#customize-comment-component .line {
  height: 1px;
  background-color: #EAEAEA;
}
