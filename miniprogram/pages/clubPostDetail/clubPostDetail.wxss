/* miniprogram/pages/clubPostDetail/clubPostDetail.wxss */
.post-detail{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.post-detail image{
  width: 100%;
  height: 340rpx;
}
.post-detail .all-post{
  
}
.post-detail .all-post .other-mess{
  display: flex;
  flex-direction: column;
  padding: 40rpx 34rpx 66rpx 40rpx;
  border-bottom: 1px solid #EAEAEA;
}
.other-mess .post-title{
  font-size:52rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:37px;
  margin-bottom: 46rpx;
}
.other-mess .category-time{
  display: flex;
  justify-content: space-between;
}
.other-mess .category-time .post-category{
  height: 40rpx;
  font-size:34rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgb(122, 150, 228);
  border: 1px solid rgb(122, 150, 228);
  padding: 0 22rpx;
}
.other-mess .category-time .post-time{
  text-align: right;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:18px;
}
.post-detail .all-post .article{
  display: flex;
  flex-direction: column;
  padding: 34rpx 34rpx 0rpx 40rpx;
}
.all-post .article rich-text{
  margin-bottom: 34rpx;
}
.all-post .article .post-tag{
  display: flex;
  flex-direction: row;
}
.post-tag text{
  border: 1px solid #ccc;
  height: 48rpx;
  background-color: #F8F8F8;
  border-radius: 2px;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#333333;
  line-height:24px;
  margin-right: 24rpx;
  padding: 22rpx;
}
.all-post .caozuo{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 72rpx 34rpx 80rpx 34rpx;
}
.caozuo button{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width:208rpx !important;
  height:120rpx !important;
  /* line-height: 120rpx; */
  background:linear-gradient(90deg,rgba(231,0,18,1) 0%,rgba(255,134,7,1) 100%);
  border-radius:30px;
  font-size:24rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(255,255,255,1);
}
.caozuo button mp-icon{
  padding: 12rpx 0 6rpx;
}
.post-detail .comment{
  padding: 0rpx 34rpx 0rpx 34rpx;
}
.post-detail .comment text{
  display: block;
  margin-bottom: 50rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.comment input{
  width: 670rpx;
  height: 68rpx;
  background-color:rgba(248,248,248,1);
  border-radius:4px;
  border: 1px solid #ccc;
  margin-bottom: 30rpx;
}
.comment .input-placeholder{
  padding-left: 16rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(150,150,150,1);
}
.comment button{
  width:144rpx !important;
  height:60rpx !important;
  line-height: 60rpx !important;
  border-radius: 28px !important;
  margin-right: 0rpx;
  background-color: #42C02E;
}
.comment button text{
  font-size:24rpx !important;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1) !important;
}